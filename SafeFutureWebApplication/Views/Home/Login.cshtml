@model SafeFutureWebApplication.Models.ViewModels.LoginViewModel

<section >
<div class="container py-5 h-75">
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["ErrorMessage"].ToString()
        </div>
    }
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="~/thumbnail_image0.jpg" class="img-fluid" alt="Safe Future Foundation logo">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form asp-action="Login" method="post">

          <div name="login-input" class="form-outline mb-3" style="display: block">
            <input asp-for="Username" type="text" class="form-control form-control-lg">
            <label asp-for="Username" class="form-label">Username</label>
            </div>

          <div name="login-input" class="form-outline mb-3" style="display: block">
            <input asp-for="Password" type="password" class="form-control form-control-lg">
            <label asp-for="Password" class="form-label">Password</label>
          </div>

          <div name="login-input" class="form-outline mb-3" style="display: none">
            <input asp-for="RecoveryUsername" type="text" class="form-control form-control-lg">
            <label asp-for="RecoveryUsername" class="form-label">Recovery Username</label>
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <a id="login-forgotpassword" onclick="toggleVisibility();">Forgot Password?</a>
          </div>

          <button type="submit" class="btn btn-success btn-lg btn-block">Sign in</button>
        </form>
      </div>
    </div>
  </div>
</section>
