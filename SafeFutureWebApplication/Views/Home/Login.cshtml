@model SafeFutureWebApplication.Models.ViewModels.LoginViewModel

<div class="container">
<h2>Login</h2>
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["ErrorMessage"].ToString()
        </div>
    }
    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control">
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>

    <a asp-controller="Home" asp-action="Recovery">Forgot Password?</a>
</div>
