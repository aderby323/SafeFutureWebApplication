
<h2>List of Accounts</h2>
@Html.ActionLink("Create New Account", "Create", "User", null, new { @class = "btn btn-success m-2" })
@if (Model.Count <= 0)
{
    <div class="alert alert-info" role="alert">
        No accounts found.
    </div>
}
@if (Model.Count > 0)
{
    <table>

        <tr>
            <th>Username:</th>
        </tr>
        @foreach (var x in Model)
        {

            <tr>
                <td>@x.Username</td>
                <td>@x.Role</td>

                <td>
                    <form method="post">

                        <button type="submit" class="btn btn-success m-2" asp-controller="Admin" asp-action="Remove" asp-route-id="@x.Username">Remove</button>
                        <button type="submit" class="btn btn-success m-2" asp-controller="Admin" asp-action="Edit" asp-route-id="@x.Username">Edit</button>
                    </form>
                </td>
            </tr>
        }

    </table>
}