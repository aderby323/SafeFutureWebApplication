@model List<SafeFutureWebApplication.Models.Recipient>

<div class="container">
    <h1>Generate Reports</h1>
</div>

<!-- DEFAULT REPORTS -->
<section class="container">
    <h2>Default Reports</h2>

    <button type="button" class="btn btn-success" onclick="getWeeklyReport();">Weekly</button>
    <button type="button" class="btn btn-success" onclick="getMonthlyReport();">Monthly</button>
    <button type="button" class="btn btn-success" onclick="getQuarterlyReport();">Quarterly</button>

    <hr style="border-width:5px; color:black" />

</section>

<!-- CUSTOM REPORTS -->
<section class="container">
    <h2>Custom Reports</h2>

    <form name="customReport " id="customReport">
        <div>
            <label for="fromDate">From:</label>
            <input type="date" id="fromDate" />
            <label for="toDate">To:</label>
            <input type="date" id="toDate" />
        </div>
        <!-- Calls GetReport endpoint -->
        <br />
        <button type="button" class="btn btn-success" onclick="getReport();">Generate Report (GetReport endpoint)</button>

    </form>

</section>

<br /><br />

<footer>
    @Html.ActionLink("Go Back", "Index", "Admin", null, new { @class = "btn btn-secondary m-2" })
</footer>


