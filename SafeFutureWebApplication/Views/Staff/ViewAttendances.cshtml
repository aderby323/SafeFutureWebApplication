@model List<SafeFutureWebApplication.Repository.Models.Attendance>
@{
    SafeFutureWebApplication.Repository.Models.Recipient recipient = ViewBag.Recipient;
}

<h1>View Attendances</h1>

<h4>Viewing previous attendances for: @recipient.FirstName @recipient.LastName</h4>
<hr />
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">Event Date</th>
            <th scope="col">Ordered By</th>
            <th scope="col" width="70%">Items Recieved</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.EventDate</td>
                <td>@x.CreatedBy</td>
                <td>@x.ItemsDistrubuted</td>
            </tr>
        }
    </tbody>
</table>