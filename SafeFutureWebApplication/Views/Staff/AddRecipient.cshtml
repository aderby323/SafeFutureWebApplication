@model SafeFutureWebApplication.Repository.Models.Recipient

<div class="container">
    <h2>Add a Recipient</h2>
    <br />
    <form asp-action="AddRecipient" method="post">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="MiddleName">Middle Name</label>
                <input asp-for="MiddleName" type="text" class="form-control" placeholder="Middle Name">
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Address1">Address</label>
            <input asp-for="Address1" type="text" class="form-control" placeholder="Address">
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="ZipCode">Zip Code</label>
                <input asp-for="ZipCode" type="text" class="form-control" placeholder="Zip Code">
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <!--TODO: Fix arrow disable-->
            <div class="form-group col-md-2">
                <label asp-for="HouseholdSize">Household Size</label>
                <input asp-for="HouseholdSize" type="number" class="form-control" value="1">
                <span asp-validation-for="HouseholdSize" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Register Recipient</button>
    </form>

    <div>
    <a asp-action="Index">Back to Search Recipients</a>
</div>
</div>