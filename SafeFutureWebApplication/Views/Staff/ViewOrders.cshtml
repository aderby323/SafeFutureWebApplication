@model List<SafeFutureWebApplication.Models.Order>
@{
    SafeFutureWebApplication.Models.Recipient recipient = ViewBag.Recipient;
}

<h1>View Orders</h1>

<h4>Viewing orders for: @recipient.FirstName @recipient.LastName</h4>
<hr />
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">Order ID</th>
            <th scope="col">Recieved Items?</th>
            <th scope="col">Date of Order</th>
            <th scope="col">Ordered By</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.OrderId</td>
                <td>@x.RecievedItems</td>
                <td>@x.CreatedOn</td>
                <td>@x.CreatedBy</td>
            </tr>
        }
    </tbody>
</table>