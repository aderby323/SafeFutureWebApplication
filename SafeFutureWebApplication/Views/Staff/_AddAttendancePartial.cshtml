@model SafeFutureWebApplication.Models.Attendance

<div class="modal fade" tabindex="-1" role="dialog" id="addAttendance">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Attendance</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="Staff/AddAttendance">

            <input name="IsValid" type="hidden" value="@ViewBag.ValidAttendance" />
            <input asp-for="RecipientId" type="hidden" value="@ViewBag.Recipient.RecipientId"/>

            <div class="container-fluid">
                <div>
                    <label asp-for="Notes">Notes</label>
                </div>
                <textarea class="modal-textarea" asp-for="Notes" name="Notes" rows="5"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </form>
      </div>
      <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-save="modal">Add Attendance</button>
      </div>
    </div>
  </div>
</div>
