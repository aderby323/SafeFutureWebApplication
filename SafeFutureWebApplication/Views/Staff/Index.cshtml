@model List<SafeFutureWebApplication.Models.Recipient>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
<div class="container">
    @if (Model != null)
    {
        <h3>Recipients: @Model.Count</h3>
    }
    else
    {
        <h3>No Recipients in database.</h3>
    }
       
    <form asp-action="Index" method="get" style="margin-bottom: 5px;">
        <div class="input-group mb-0">
            <input type="text" class="form-control" name="searchString" value="@ViewData["CurrentSearch"]" placeholder="Search Recipients">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
            </div>
        </div>
    </form>
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Zip Code</th>
                <th scope="col">Household Size</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.FirstName</td>
                    <td>@x.LastName</td>
                    <td>@x.ZipCode</td>
                    <td>@x.HouseholdSize</td>
                    <td>
                        <a asp-action="AddAttendance" asp-controller="Staff" asp-route-recipientId="@x.RecipientId" class="btn btn-info">Add Attendance</a>
                        <a asp-action="ViewAttendances" asp-controller="Staff" asp-route-recipientId="@x.RecipientId" class="btn btn-info">View Attendances</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="container">
    <div class="row">
        @Html.ActionLink("Add a Recipient", "AddRecipient", "Staff", null, new { @class = "btn btn-success m-2" })
    </div>
</div>