@model SafeFutureWebApplication.Models.ViewModels.GetRecipientsViewModel

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
<div class="container">
    @if (Model == null || Model.Recipients.IsNullOrEmpty() || Model.Recipients.Count() < 1)
    {
        <h3>No Recipients in database.</h3>
    }
       
    <div id="Placeholder"></div>

    <form asp-action="Index" method="get" style="margin-bottom: 5px;">
        <div class="input-group mb-0">
            <input type="text" class="form-control" placeholder="Search Recipients" name="searchString">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
            </div>
        </div>
    </form>
    <table class="table table-hover recipients-table">
        <thead class="thead-light">
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Zip Code</th>
                <th scope="col">Household Size</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.Recipients)
            {
                <tr>
                    <td>@x.FirstName</td>
                    <td>@x.LastName</td>
                    <td>@x.ZipCode</td>
                    <td>@x.HouseholdSize</td>
                    <td>
                        <a asp-action="AddAttendance" asp-controller="Staff" asp-route-recipientId="@x.RecipientId" class="btn btn-info" data-toggle="ajax-modal" data-target="#addAttendance" data-url="@Url.Action("AddAttendance")">Add Attendance</a>
                        <a asp-action="ViewAttendances" asp-controller="Staff" asp-route-recipientId="@x.RecipientId" class="btn btn-info">View Attendances</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Table pagination">
      <ul class="pagination justify-content-end">
        @{
            if (Model.CurrentPage <= 1)
            {
                <li class="page-item"><a class="page-link"><i class="fas fa-chevron-left disabled"></i></a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link"><i class="fas fa-chevron-left"></i></a></li>
                    
            }

            if (Model.PreviousPage >= 1)
            {
                <li class="page-item"><a class="page-link" href="#">@Model.PreviousPage</a></li>
                    
            }

            <li class="page-item"><a class="page-link" href="#">@Model.CurrentPage</a></li>

            if (Model.NextPage < Model.NumOfPages)
            {        
                <li class="page-item"><a class="page-link" href="#">@Model.NextPage</a></li>
            }

            if (Model.CurrentPage == Model.NumOfPages)
            {  
                <li class="page-item"><a class="page-link"><i class="fas fa-chevron-right disabled"></i></a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link"><i class="fas fa-chevron-right"></i></a></li>                    
            }
        }
      </ul>
    </nav>
</div>

<div class="container">
    <div class="row">
        <button type="button" class="btn btn-info" data-toggle="ajax-modal" data-target="#addRecipient" data-url="@Url.Action("AddRecipient")">Add Recipient</button>
    </div>
</div>