@model SafeFutureWebApplication.Models.Attendance

@{
    ViewData["Title"] = "Add Attendance";
    SafeFutureWebApplication.Models.Recipient recipient = ViewBag.Recipient;
}

<h1>Add Attendance</h1>
<br />
<h4>Creating Attendance for: @recipient.FirstName @recipient.LastName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAttendance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <input asp-for="RecipientId" class="form-control" value="@recipient.RecipientId"/>
            </div>
            <div class="form-group">
                <label asp-for="ItemsDistributed">Items Distributed</label>
                <textarea asp-for="ItemsDistributed" class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Search Recipients</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
